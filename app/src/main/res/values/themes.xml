<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for AppCompat -->
    <style name="Theme.dev.aurakai.auraframefx" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary_dark</item>
        <item name="colorAccent">@color/light_secondary</item>
        <!-- Surface colors -->
        <item name="android:colorBackground">@color/light_background</item>
        <!-- Text colors -->
        <item name="android:textColor">@color/light_on_surface</item>
        <item name="android:textColorPrimary">@color/light_on_surface</item>
        <item name="android:textColorSecondary">@color/light_on_surface_variant</item>
    </style>

    <!-- Theme overlay for action bar -->
    <style name="ThemeOverlay.dev.aurakai.auraframefx.ActionBar" parent="">
        <item name="colorPrimary">@color/light_primary</item>
    </style>
</resources>
